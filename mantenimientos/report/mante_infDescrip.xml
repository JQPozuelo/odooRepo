<odoo>

    <record id="mantenimientos.Descrip_report" model="ir.actions.report">
        <field name="name">Informe descripcion</field>
        <field name="model">mantenimientos.descripcion</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mantenimientos.descripcion_report_view</field>
        <field name="report_file">mantenimientos.descripcion_report</field>
        <field name="binding_model_id" ref="model_mantenimientos_descripcion"></field>
        <field name="binding_type">report</field>
    </record>

    <template id="descripcion_report_view">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="descripcion">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Informe</h2>
                        <h3 t-field="descripcion.TipoMantenimiento"></h3>
                       

                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th>Modelo</th>
                                    <th>Edad</th>
                                    <th>Motor</th>
                                    <th>Combustible</th>
                                    <th>Nombre del propietario</th>
                                    <th>Telefono</th>
                                        
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="descripcion.CocheSeleccionado" t-as="coches">
                                    <tr>
                                        <td>
                                            <span t-field="coches.Modelo"/>
                                        </td>
                                        <td>
                                            <span t-field="coches.Anio"/>
                                        </td>
                                        <td>
                                            <span t-field="coches.Motor"/>
                                        </td>
                                        <td>
                                            <span t-field="coches.Combustible"/>
                                        </td>
                                        <td>
                                            <span t-field="coches.NombrePropietario"/>
                                        </td>
                                        <td>
                                            <span t-field="coches.TelefonoPropietario"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>

                        </table>

                            
                        
                    </div>
                </t>
            </t>
        
        </t>


    </template>




</odoo>